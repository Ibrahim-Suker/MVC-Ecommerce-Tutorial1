@model Product

@section PageTitle {
    <!-- Header -->
    <header class="bg-primary py-5">
        <div class="container px-4 px-lg-5 my-5">
            <div class="text-center text-white">
                <h1 class="display-4 fw-bolder">Product Details</h1>
                <p class="lead fw-normal text-white-50 mb-0">@Model.Name</p>
            </div>
        </div>
    </header>
}

<section class="py-5 bg-light">
    <div class="container mt-5 mb-5">
        <div class="card shadow-lg border-0 rounded-4 overflow-hidden">
            <div class="row g-0">
                <!-- صورة المنتج -->
                <div class="col-md-5 bg-white p-3 d-flex align-items-center justify-content-center">
                    <img src="@Model.Image" id="main_product_image" class="img-fluid rounded-4" alt="@Model.Name"
                         style="max-height: 400px; object-fit: cover; transition: transform 0.4s ease-in-out;"
                         onmouseover="this.style.transform='scale(1.05)'"
                         onmouseout="this.style.transform='scale(1)'" />
                </div>

                <!-- تفاصيل المنتج -->
                <div class="col-md-7 bg-white">
                    <div class="p-5">
                        <h2 class="fw-bold mb-4">@Model.Name</h2>

                        <p class="text-muted fs-5 mb-4">@Model.Description</p>

                        <div class="d-flex align-items-center mb-4">
                            <h3 class="text-success fw-bold mb-0">$@Model.Price</h3>
                        </div>

                        <div class="mb-4">
                            <a asp-controller="Cart" asp-action="AddToCart" asp-route-productId="@Model.Id"
                               class="btn btn-success btn-lg rounded-pill px-5 py-2">
                                <i class="bi bi-cart-plus me-2"></i> Add to Cart
                            </a>
                        </div>

                        <div class="mt-3">
                            <span class="badge bg-success p-2 fs-6">Available Now</span>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
</section>

<style>
    /* تأثير خفيف للكارت عند المرور */
    .card:hover {
        box-shadow: 0 0 20px rgba(0,0,0,0.2);
        transition: 0.4s;
    }
</style>
