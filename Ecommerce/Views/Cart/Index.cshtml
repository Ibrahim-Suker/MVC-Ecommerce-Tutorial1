@model List<Cart>

@section PageTitle {
    <!-- Enhanced Header -->
    <header class="bg-dark py-5">
        <div class="container px-4 px-lg-5 my-5">
            <div class="text-center text-white">
                <h1 class="display-4 fw-bolder">Your Shopping Cart</h1>
                <p class="lead fw-normal text-white-50 mb-0">Review and manage your items</p>
            </div>
        </div>
    </header>
}

<section class="py-5">
    <div class="container">
        <div class="row g-4">
            <!-- Cart Items Section -->
            <div class="col-lg-8">
                <div class="card border-0 shadow-sm">
                    <div class="card-body p-4">
                        <h4 class="card-title mb-4">
                            <i class="fas fa-shopping-cart me-2"></i>Your Items
                            <span class="badge bg-primary rounded-pill ms-2">@Model.Count</span>
                        </h4>

                        @if (!Model.Any())
                        {
                            <div class="text-center py-5">
                                <i class="fas fa-cart-plus fa-4x text-muted mb-3"></i>
                                <h5>Your cart is empty</h5>
                                <p class="text-muted">Start shopping to add items</p>
                                <a asp-controller="Home" asp-action="Index" class="btn btn-primary mt-3">
                                    <i class="fas fa-arrow-left me-2"></i>Continue Shopping
                                </a>
                            </div>
                        }
                        else
                        {
                            @foreach (var cartItem in Model)
                            {
                                <div class="row align-items-center g-3 mb-4 pb-3 border-bottom">
                                    <!-- Product Image & Info -->
                                    <div class="col-md-5">
                                        <div class="d-flex align-items-center">
                                            <img src="@cartItem.Product.Image"
                                                 class="img-fluid rounded me-3"
                                                 style="width: 80px; height: 80px; object-fit: cover;"
                                                 alt="@cartItem.Product.Name">
                                            <div>
                                                <a href="#" class="h6 mb-1 d-block text-decoration-none">@cartItem.Product.Name</a>
                                                <span class="text-success fw-bold">$@cartItem.Product.Price.ToString("N2")</span>
                                            </div>
                                        </div>
                                    </div>

                                    <!-- Quantity Selector -->
                                    <div class="col-md-3">
                                        <div class="d-flex align-items-center">
                                            <select id="product-@cartItem.ProductId"
                                                    data-productId="@cartItem.ProductId"
                                                    class="form-select"
                                                    style="width: 80px;"
                                                    onchange="submitCart(@cartItem.ProductId)">
                                                @for (int i = 1; i <= 10; i++)
                                                {
                                                    <option value="@i" selected="@(i == cartItem.Qty)">@i</option>
                                                }
                                            </select>
                                        </div>
                                    </div>

                                    <!-- Price & Actions -->
                                    <div class="col-md-4">
                                        <div class="d-flex justify-content-between align-items-center">
                                            <span class="h6 mb-0">
                                                $@((cartItem.Product.Price * cartItem.Qty).ToString("N2"))
                                            </span>
                                            <div>
                                                <a asp-controller="Cart" asp-action="Remove" asp-route-id="@cartItem.Id"
                                                   class="btn btn-sm btn-outline-danger"
                                                   title="Remove item">
                                                    <i class="fas fa-trash-alt"></i>
                                                </a>
                                            </div>
                                        </div>
                                    </div>
                                </div>
                            }

                            <!-- Shipping Info -->
                            <div class="bg-light p-3 rounded mt-4">
                                <div class="d-flex align-items-center mb-2">
                                    <i class="fas fa-truck text-primary me-2"></i>
                                    <span class="fw-medium">Free Standard Shipping</span>
                                </div>
                                <p class="small text-muted mb-0">
                                    Items will be shipped within 1-2 business days. Express shipping options available at checkout.
                                </p>
                            </div>
                        }
                    </div>
                </div>
            </div>

            <!-- Order Summary -->
            <div class="col-lg-4">
                <div class="card border-0 shadow-sm sticky-top" style="top: 20px;">
                    <div class="card-body p-4">
                        <h5 class="card-title mb-3">
                            <i class="fas fa-receipt me-2"></i>Order Summary
                        </h5>

                        <!-- Coupon Code -->
                        <div class="mb-4">
                            <label class="form-label small text-uppercase fw-bold">Promo Code</label>
                            <div class="input-group">
                                <input type="text" class="form-control" placeholder="Enter code">
                                <button class="btn btn-outline-secondary" type="button">Apply</button>
                            </div>
                        </div>

                        <!-- Order Breakdown -->
                        <ul class="list-group list-group-flush mb-3">
                            <li class="list-group-item d-flex justify-content-between align-items-center px-0">
                                <span>Subtotal</span>
                                <span>$@ViewBag.TotalCost.ToString("N2")</span>
                            </li>
                            <li class="list-group-item d-flex justify-content-between align-items-center px-0">
                                <span>Shipping</span>
                                <span class="text-success">FREE</span>
                            </li>
                            <li class="list-group-item d-flex justify-content-between align-items-center px-0">
                                <span>Tax</span>
                                <span>Calculated at checkout</span>
                            </li>
                            <li class="list-group-item d-flex justify-content-between align-items-center px-0 pt-3 border-top">
                                <strong>Total</strong>
                                <strong>$@ViewBag.TotalCost.ToString("N2")</strong>
                            </li>
                        </ul>

                        <!-- Checkout Buttons -->
                        <div class="d-grid gap-2">
                            <a asp-controller="Checkout" asp-action="Index"
                               class="btn btn-primary btn-lg @(Model.Count == 0 ? "disabled" : "")">
                                <i class="fas fa-lock me-2"></i>Secure Checkout
                            </a>
                            <a asp-controller="Home" asp-action="Index" class="btn btn-outline-secondary">
                                <i class="fas fa-arrow-left me-2"></i>Continue Shopping
                            </a>
                        </div>

                    </div>
                </div>
            </div>
        </div>
    </div>
</section>

@section Styles {
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.4.0/css/all.min.css">
    <style>
        .quantity-selector {
            width: 80px;
        }

        .card {
            transition: transform 0.2s;
        }

            .card:hover {
                transform: translateY(-2px);
            }

        .sticky-top {
            position: -webkit-sticky;
            position: sticky;
        }
    </style>
}

@section Scripts {
    <script>
        function submitCart(productId) {
            const selectElement = document.getElementById(`product-${productId}`);
            const qty = selectElement.value;

            // Show loading state
            selectElement.disabled = true;
            selectElement.classList.add('disabled');

            // Submit via fetch API for better UX
            fetch('/Cart/UpdateQty?productId=' + productId + '&qty=' + qty, {
                method: 'GET'
            })
            .then(response => {
                if (response.ok) {
                    window.location.reload(); // Refresh to show updated totals
                } else {
                    alert('Error updating quantity');
                    selectElement.disabled = false;
                    selectElement.classList.remove('disabled');
                }
            })
            .catch(error => {
                console.error('Error:', error);
                selectElement.disabled = false;
                selectElement.classList.remove('disabled');
            });
        }
    </script>
}